    calculation   = "relax"
    restart_mode  = "from_scratch"
    prefix        = 'HNBCrhBN'
    pseudo_dir    = "../../pseudo/"
    outdir        = '../../mytmp/'
    forc_conv_thr =  1.d-5
    nstep=100
/

